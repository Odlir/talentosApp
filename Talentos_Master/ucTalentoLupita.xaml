<UserControl x:Class="Talentos_Master.ucTalentoLupita"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:my="clr-namespace:Talentos_Master"       
    Width="265" Height="350">
    <Grid x:Name="LayoutRoot" Background="Transparent">

        <Grid.RowDefinitions>

            <RowDefinition Height="0.9*" />

            <RowDefinition Height="0.1*" />

        </Grid.RowDefinitions>
        

        <Image x:Name="imgTalento" Width="260" Height="295" Grid.Row="0" Tag="{Binding source}" Source="{Binding source}" Stretch="Fill" /> 
        <!--<Image x:Name="imgTalento" Width="170" Height="200" Grid.Row="0" Tag="talentos/images/Image1.png" Source="talentos/images/Image1.png" Stretch="Fill" />-->

        <StackPanel x:Name="buttseven" Orientation="Horizontal" Grid.Row="1" Margin="115,0,0,0" Background="Transparent" >


            <my:ButtonSeven x:Name="btnVoltear" Height="35" Width="35" Title="Ver detalle" ToolTipService.ToolTip="Ver Detalle"  ImageSource="images/buttonSeven/ver.png" TransitionColor="#7f3E8DDD" 

            VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MouseLeftButtonDown="btnVoltear_MouseLeftButtonDown" />

        </StackPanel>

    </Grid>
</UserControl>
