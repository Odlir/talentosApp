                        <TextBlock Grid.Column="0" Padding="10" x:Name="txtInstruccion1" VerticalAlignment="Center" Style="{StaticResource txtInstrucciones}" TextWrapping="Wrap" Visibility="Visible"  Cursor="Hand" Margin="5,5,10,0" Height="40" > 
