        </TextBlock>
        <TextBlock     TextAlignment="Right" Style="{StaticResource Bienvenida}" Grid.Row="0" Grid.Column="1" Margin="0,0,40,5"  HorizontalAlignment="Right" Width="250"  VerticalAlignment="Bottom"  Height="15"   >
                <Run x:Name="txtfullname" ></Run>
