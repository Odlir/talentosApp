<UserControl x:Class="Talentos_Master.ucTalentitoMapa"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="120" Height="50">
    <Canvas x:Name="LayoutRoot"  Width="120" Height="50" Background="Transparent">
        <Canvas Width="120" Height="50">
            <Canvas.RenderTransform>
                <ScaleTransform x:Name="CanvasScale" ScaleX="1" ScaleY="1"></ScaleTransform>
            </Canvas.RenderTransform>
            <Border x:Name="recomendacionBorder"  BorderThickness="2" Background="Transparent" CornerRadius="12" BorderBrush="{Binding Path=color}" Cursor="Hand" Width="110" Height="40" Margin="5">
                <Grid x:Name="grd">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*"></RowDefinition>
                        <RowDefinition Height="0.9*"></RowDefinition>
                        <RowDefinition Height="0.05*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="txtNombre" Grid.Row="1" Text="{Binding Path=nombre}" Tag="{Binding Path=source}" TextWrapping="Wrap" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Style="{StaticResource LetraPopUp}"></TextBlock>

                </Grid>

            </Border>
        </Canvas>
    </Canvas>
</UserControl>
